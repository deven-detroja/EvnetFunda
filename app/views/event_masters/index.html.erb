<h1>Listing event_masters</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Description</th>
      <th>Capacity</th>
      <th>Private</th>
      <th>Status</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Max</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_masters.each do |event_master| %>
      <tr>
        <td><%= event_master.title %></td>
        <td><%= event_master.url %></td>
        <td><%= event_master.description %></td>
        <td><%= event_master.capacity %></td>
        <td><%= event_master.private %></td>
        <td><%= event_master.status %></td>
        <td><%= event_master.start_date %></td>
        <td><%= event_master.end_date %></td>
        <td><%= event_master.max %></td>
        <td><%= image_tag event_master.image.url(:thumb) %></td>
        <td><%= link_to 'Show', event_master %></td>
        <td><%= link_to 'Edit', edit_event_master_path(event_master) %></td>
        <td><%= link_to 'Destroy', event_master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Tickets', event_master_event_ticket_types_path(event_master) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

